extends layout

block content
  link(rel="stylesheet", href="/stylesheets/index.css")
  h1= title
  div(class="image")
    img(src="https://i.pravatar.cc/" alt="User Avatar" height="100", width = "100")
  p Welcome to the Cats World
  button(class="login" id="login") Login
  .container
    // Message display area
    #messageContainer.message-container(style="display: none;")
      span#messageText
      button#closeMessage.close-btn Ã—

    // Form to submit new cat
    form(action="/users" method="POST")
      div
        label(for="name") Name:
        input(type="text" name="name" id="name" required)
      div
        label(for="owner") Owner:
        input(type="text" name="owner" id="owner" required)
      div
        label(for="birth") Birth:
        input(type="text" name="birth" id="birth" required)
      div.form-buttons
        button(type="submit") Submit
        button#suggest(type="button") Suggest
    
    // Buttons for actions
    div.action-buttons
      button#viewAllBtn(type="button") View All
      button#deleteBtn(type="button") Delete

    // Table to display cats
    table#catsTable
      thead
        tr   
          th 
          th ID
          th Name
          th Owner
          th Birth
      tbody
        // Rows will be populated by JavaScript

    script(src="/javascripts/index.js")